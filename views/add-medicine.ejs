  <div class="main p-3 d-flex">
    <div class="regForm w-75 p-2 mx-auto">
      <h2 class="h2 mb-2"><%= pageTitle %></h2>
      <form action="<% if(editMode){ %>/edit-medicine<% }else{ %>/add-medicine<% } %>" method="post" class="row g-3">
        <% if(editMode){ %>
          <input type="hidden" name="mid" value="<%= prevMedDetails._id %>">  
        <% } %>
        <div class="col-12">
          <label for="inputBNo" class="form-label">Batch No.</label>
          <input type="text" name="mbno" class="form-control" id="inputBNo" placeholder="ex. E2402405" value="<% if(editMode){ %><%= prevMedDetails.mbno %><% } %>">
        </div>
        <div class="col-12">
          <label for="inputName" class="form-label">Name</label>
          <input type="text" name="mname" class="form-control" id="inputName" value="<% if(editMode){ %><%= prevMedDetails.mname %><% } %>" placeholder="ex. Omez">
        </div>
        <div class="col-12">
          <label for="inputManufacturer" class="form-label">Manufacturer</label>
          <input type="text" name="mmanufacturer" class="form-control" id="inputManufacturer" value="<% if(editMode){ %><%= prevMedDetails.mmanufacturer %><% } %>" placeholder="ex. Dr. Reddy's Lab">
        </div>
        <div class="col-12">
          <label for="inputPrice" class="form-label">Price</label>
          <input type="number" name="mprice" min="1" step="0.01" class="form-control" id="inputPrice" value="<% if(editMode){ %><%= prevMedDetails.mprice %><% } %>" placeholder="ex. 64.20">
        </div>
        <div class="col-md-6">
          <label for="inputQty" class="form-label">Qty</label>
          <input type="number" name="mqty" min="1" class="form-control" id="inputQty" value="<% if(editMode){ %><%= prevMedDetails.mqty %><% } %>" placeholder="ex. 1">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-success"><% if(editMode){ %>Edit<% }else{ %>Add<% } %></button>
          <button type="reset" class="btn btn-danger">Cancel</button>
        </div>
      </form>
    </div>
  </div>
<%- include("./footer.ejs") %>